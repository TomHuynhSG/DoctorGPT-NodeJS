    <div class="chat">
        <div class="chat-title">
            <h1><%= patient_name %></h1>
        </div>
        <div class="messages">
            <div class="messages-content"></div>
        </div>
        <div class="message-box">
            <textarea type="text" class="message-input" id="typed-input" placeholder="Type message..."></textarea>
            <i class="input-microphone material-icons-extended" id="mic" style="display: block;">mic</i>
            <button type="submit" class="message-submit">Send</button>
        </div>
